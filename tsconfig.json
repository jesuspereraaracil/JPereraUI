{
  "compilerOptions": {
    "target": "es5",
    "jsx": "react-jsx",
    "module": "CommonJS",
    "moduleResolution": "node",
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "sourceMap": true,
    "outDir": "lib",
    "declarationDir": "lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": ["webpack.config.js",
    "node_modules",
    "lib",
    ".idea",
    "jest.config.js",
    "**/*.stories.*",
    "**/*.test.*"]
}
